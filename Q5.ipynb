   "source": [
    "def n_gram(target, n):\n",
    "    return [ target[i:i+n] for i in range(len(target) - n + 1)]\n",
    "\n",
    "target = \"I am an NLPer\"\n",
    "print(n_gram(target, 2))\n",
    "words = target.split(\" \")\n",
    "print(n_gram(words, 2))"
